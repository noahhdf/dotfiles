warning = ${colors.yellow}
alert = ${colors.red}

[bar]
width = 100%
height = 20
offset-x = 0
offset-y = 0
underline-size = 2
fixed-center = true
; monitor = eDP1
background = ${colors.background}
line-color = ${colors.background}
foreground = ${colors.foreground}
font-0 = "FiraCodeLight:size=8;1"
font-1 = "FontAwesome:size=8;1"
font-2 = "DejaVuSerifCondensed:size=6;1"
module-margin = 1

[bar/combined]
inherit = bar
line-size = 16
label-active-font = 0
modules-left = battery temperature cpu ram backlight performance
modules-center = traffic i3
modules-right = date filesystem pulseaudio
tray-position = right

[bar/top]
inherit = bar
line-size = 16
label-active-font = 0
modules-left = temperature cpu ram backlight performance
modules-center = date weather
modules-right = pulseaudio
tray-position = right

[bar/bottom]
inherit = bar
bottom = true
line-size = 16
modules-left = i3
modules-center =
; modules-right = traffic battery

[module/weather]
type = custom/script
exec = curl wttr.in/Dortmund?format=1 -s
onclick = curl wttr.in/Dortmund?format=3 -s
tail = true
interval = 120

[module/performance]
type = custom/script
exec = ~/.config/i3blocks/blocks/performance
format = <label>
interval = 10

[module/uptime]
type = custom/script
exec = uptime --pretty | sed 's/ days*/d/;s/ hours*/h/;s/ minutes*/m/;s/,//g'
interval = 60


[module/traffic]
type = custom/script
exec = ~/.config/i3blocks/blocks/traffic
format = Traffic <label>
interval = 60

[module/filesystem]
type = internal/fs
mount-0 = /
interval = 10
label-mounted = %mountpoint% %free%

[module/backlight]
type = internal/xbacklight
interval = 1
format = <ramp>
ramp-0 = ▁
ramp-1 = ▂
ramp-2 = ▃
ramp-3 = ▄
ramp-4 = ▅
ramp-5 = ▆
ramp-6 = ▇
ramp-7 = █
; bar-width = 5
; bar-indicator = +
; bar-indicator-font = 2
; bar-indicator-foreground = ${colors.cyan}
; bar-fill = -
; bar-fill-font = 2
; bar-fill-foreground = ${colors.cyan}
; bar-empty = -
; bar-empty-font = 2
; bar-empty-foreground = ${colors.black}

[module/wired]
type = internal/network
interface = enp0s25
format-connected =  <label-connected>
format-disconnected = <label-disconnected>
label-connected = %local_ip%
label-disconnected =
; format-connected-underline=${colors.green}
; format-disconnected-underline=${colors.alert}
label-connected-foreground = ${colors.green}
label-disconnected-foreground = ${colors.alert}

[module/wireless]
type = internal/network
interface = wlp3s0
format-connected =  <label-connected>
format-disconnected =  <label-disconnected>
label-connected = %essid%
label-disconnected = no wireless connection
; format-connected-underline=${colors.green}
; format-disconnected-underline=${colors.alert}
label-connected-foreground = ${colors.green}
label-disconnected-foreground = ${colors.alert}

[module/battery]
type = custom/script
exec = ~/.config/i3blocks/blocks/battery_combined.lua
format = <label>
interval = 5

[module/battery_internal]
inherit = battery
battery = BAT0

[module/battery_external]
inherit = battery
battery = BAT1

[battery]
type = internal/battery
adapter = AC
full-at = 98
time-format = %H:%M
format-charging = <ramp-capacity> <label-charging>
label-charging =  %percentage%%
format-discharging = <ramp-capacity> <label-discharging>
label-discharging = %time%
format-full = <ramp-capacity> <label-full>
label-full = ""
; ramp-capacity-0 = 
ramp-capacity-0-foreground = ${colors.background}
ramp-capacity-0-background = ${colors.alert}
; ramp-capacity-1 = 
ramp-capacity-1-foreground = ${colors.alert}
; ramp-capacity-2 = 
; ramp-capacity-3 = 
; ramp-capacity-4 = 
ramp-capacity-0 = ▁
ramp-capacity-1 = ▂
ramp-capacity-2 = ▃
ramp-capacity-3 = ▄
ramp-capacity-4 = ▅
ramp-capacity-5 = ▆
ramp-capacity-6 = ▇
ramp-capacity-7 = █
; bar-capacity-width = 10
; bar-capacity-format = %{+u}%{+o}%fill%%empty%%{-u}%{-o}
; bar-capacity-fill = 
; bar-capacity-fill-foreground = #ddffffff
; bar-capacity-fill-font = 1
; bar-capacity-empty = 
; bar-capacity-empty-font = 1
; bar-capacity-empty-foreground = #44ffffff

[module/utc]
type = custom/script
exec = echo "($(date +%R --utc) UTC)"
interval = 10

[module/date]
type = internal/date
; date = %%{F#99}%d.%m.%Y %H:%M%%{F-}
; date-alt = %%{F#fff}%A, %d %B %Y %H:%M:%S%%{F-}
date = %d.%m.%Y %H:%M
date-alt = %A, %d %B %Y %H:%M:%S

[module/swap]
type = internal/memory
format = <label> <bar-swap-used>
label =
bar-used-width = 10
bar-used-foreground-0 = ${colors.highlight}
bar-used-foreground-1 = ${colors.highlight}
bar-used-foreground-2 = ${colors.warning}
bar-used-foreground-3 = ${colors.alert}
bar-used-indicator = |
bar-used-indicator-foreground = ${colors.foreground}
bar-used-fill = ─
bar-used-empty = ─
bar-used-empty-foreground = ${colors.black}


[module/ram]
type = internal/memory
format = <ramp-used>
ramp-used-0 = ▁
ramp-used-1 = ▂
ramp-used-2 = ▃
ramp-used-3 = ▄
ramp-used-4 = ▅
