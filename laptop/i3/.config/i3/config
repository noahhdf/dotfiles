#  -- color windows --  #
#                       #border        #background    #text          #indicator
# client.focused          $green         $green         $black  $orange
# client.unfocused        $dark_gray     $dark_gray     $light_white   $orange
# client.focused_inactive $dark_gray     $dark_gray     $light_white   $orange
# client.urgent           $red           $red           $black  $orange
#
#  -- color windows --  #
#                       #border #background #text  #indicator
client.focused          $white  $white      $black $red
client.unfocused        $black  $black      $white $red
client.focused_inactive $black  $black      $white $red
client.urgent           $red    $red        $black $red


#  -- i3blocks --  #
bar {
    status_command i3blocks
    # output edp-1
    # output hmdi-1
    tray_output edp-1
    tray_padding 3
    font                pango:OfficeCodeProD 9
    colors              {
        background      $fullblack
        statusline      $brightwhite
        separator       $white
        #                  #border       #background   #text
        focused_workspace  $fullblack $fullblack $brightwhite
        active_workspace   $fullblack $fullblack $white
        inactive_workspace $fullblack $fullblack $black
        urgent_workspace   $fullblack $fullblack $red
        binding_mode       $fullblack $fullblack $red
    }
    mode dock  # dock, hide, invisible
    hidden_state hide  # hide, show
    modifier $win
    strip_workspace_numbers yes  # yes, no
    separator_symbol "|"
    position top  # top, bottom
    workspace_buttons yes
}


#  -- default borders and stuff --  #
for_window [class=".*"] border pixel 1
for_window [workspace=$ws7 class="MuPDF"] floating enable, border normal 1
for_window [class="Tk"] floating enable, border normal 1
for_window [class="Matplotlib"] floating enable, border normal 1

bindsym $mod+b mode "borders"
mode "borders" {
    # use window title, but no border
    bindsym t border normal 0
    # use window title with 1 pixel border
    bindsym a border normal 1
    # use only border
    bindsym b border pixel 1
    # use neither window title nor border
    bindsym n border none
    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

