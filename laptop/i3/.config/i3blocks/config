separator=false

[uptime]
# label=
# color=#EBCB8B
# command=uptime -p | grep up | sed s/up\ // | sed s/\ hours/h/ | sed s/\ hour/h/ | sed s/\ minutes/m/ | sed s/\ minute// | sed s/,\ /:/
interval=60
